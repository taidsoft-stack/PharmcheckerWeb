<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <title>결제 성공</title>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        max-width: 600px;
        margin: 50px auto;
        padding: 20px;
      }
      h2 {
        color: #27ae60;
      }
      .success-info {
        background-color: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        margin-top: 20px;
      }
    </style>
  </head>
  <body>
    <h2>결제 성공</h2>
    <div class="success-info">
      <p id="paymentKey"></p>
      <p id="orderId"></p>
      <p id="amount"></p>
    </div>
    <p style="color: #666; margin-top: 20px;">결제를 확인하고 있습니다...</p>

    <script>
      // 쿼리 파라미터 값이 결제 요청할 때 보낸 데이터와 동일한지 반드시 확인하세요.
      // 클라이언트에서 결제 금액을 조작하는 행위를 방지할 수 있습니다.
      const urlParams = new URLSearchParams(window.location.search);
      const paymentKey = urlParams.get("paymentKey");
      const orderId = urlParams.get("orderId");
      const amount = urlParams.get("amount");
      const email = urlParams.get("email");
      const plan = urlParams.get("plan");

      async function confirm() {
        const requestData = {
          paymentKey: paymentKey,
          orderId: orderId,
          amount: amount,
        };

        const response = await fetch("/confirm", {
          method: "POST",
          headers: {
            "Content-Type": "application/json",
          },
          body: JSON.stringify(requestData),
        });

        const json = await response.json();

        if (!response.ok) {
          // 결제 실패 비즈니스 로직을 구현하세요.
          return;
        }

        // 결제 성공 비즈니스 로직을 구현하세요.
        console.log(json);
        
        // 부모 창을 구매 완료 페이지로 리다이렉트
        if (window.opener) {
          const params = new URLSearchParams({
            paymentKey: paymentKey,
            orderId: orderId,
            amount: amount,
            email: email || '',
            plan: plan || '',
            orderName: json.orderName || ''
          });
          window.opener.location.href = `/purchase-complete?${params.toString()}`;
          // 팝업 창 닫기
          window.close();
        } else {
          // 팝업이 아닌 경우 직접 이동
          const params = new URLSearchParams({
            paymentKey: paymentKey,
            orderId: orderId,
            amount: amount,
            email: email || '',
            plan: plan || '',
            orderName: json.orderName || ''
          });
          window.location.href = `/purchase-complete?${params.toString()}`;
        }
        // 결제 성공 비즈니스 로직을 구현하세요.
        console.log(json);
      }
      confirm();

      const paymentKeyElement = document.getElementById("paymentKey");
      const orderIdElement = document.getElementById("orderId");
      const amountElement = document.getElementById("amount");

      orderIdElement.textContent = "주문번호: " + orderId;
      amountElement.textContent = "결제 금액: " + amount;
      paymentKeyElement.textContent = "paymentKey: " + paymentKey;
    </script>
  </body>
</html>
