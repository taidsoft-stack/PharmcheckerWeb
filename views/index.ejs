<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <title>PharmChecker 결제</title>
    <link rel="icon" href="data:," />
    <script src="https://js.tosspayments.com/v2/standard"></script>
    <style>
      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        max-width: 600px;
        margin: 0 auto;
        padding: 40px 20px;
      }
      h1 {
        font-size: 24px;
        margin-bottom: 20px;
      }
      .plan-info {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin-bottom: 30px;
      }
      .button {
        width: 100%;
        padding: 16px;
        background-color: #191f28;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
      }
      .button:hover {
        background-color: #2c3440;
      }
      #payment-method, #agreement {
        margin-bottom: 20px;
      }
    </style>
  </head>
  <body>
    <h1>PharmChecker 구독 결제</h1>
    <div class="plan-info">
      <div id="plan-name"></div>
      <div id="plan-amount"></div>
    </div>
    
    <!-- 결제 UI -->
    <div id="payment-method"></div>
    <!-- 이용약관 UI -->
    <div id="agreement"></div>
    <!-- 결제하기 버튼 -->
    <button class="button" id="payment-button">결제하기</button>

    <script>
      main();

      async function main() {
        // URL 파라미터에서 플랜 정보 가져오기
        const urlParams = new URLSearchParams(window.location.search);
        const planName = urlParams.get('plan') || '플랜';
        const amount = parseInt(urlParams.get('amount')) || 0;

        // 세션에서 사용자 정보 가져오기
        let customerEmail = "customer@example.com";
        let customerName = "고객";
        
        const userDataStr = sessionStorage.getItem('user');
        if (userDataStr) {
          try {
            const userData = JSON.parse(userDataStr);
            customerEmail = userData.email || customerEmail;
            customerName = userData.name || customerName;
          } catch (error) {
            console.error('사용자 정보 파싱 오류:', error);
          }
        }

        // 플랜 정보 표시
        document.getElementById('plan-name').textContent = `플랜: ${planName}`;
        document.getElementById('plan-amount').textContent = `금액: ${amount.toLocaleString()}원/월`;

        const button = document.getElementById("payment-button");
        
        // ------  결제위젯 초기화 ------
        const clientKey = "test_gck_docs_Ovk5rk1EwkEbP0W43n07xlzm";
        const tossPayments = TossPayments(clientKey);
        
        // 비회원 결제
        const widgets = tossPayments.widgets({ customerKey: TossPayments.ANONYMOUS });

        // ------ 주문의 결제 금액 설정 ------
        await widgets.setAmount({
          currency: "KRW",
          value: amount,
        });

        await Promise.all([
          // ------  결제 UI 렌더링 ------
          widgets.renderPaymentMethods({
            selector: "#payment-method",
            variantKey: "DEFAULT",
          }),
          // ------  이용약관 UI 렌더링 ------
          widgets.renderAgreement({ selector: "#agreement", variantKey: "AGREEMENT" }),
        ]);

        // ------ '결제하기' 버튼 누르면 결제창 띄우기 ------
        button.addEventListener("click", async function () {
          const orderId = "order_" + Date.now();
          const orderName = `PharmChecker 구독 - ${planName}`;
          
          await widgets.requestPayment({
            orderId: orderId,
            orderName: orderName,
            successUrl: window.location.origin + `/success?plan=${encodeURIComponent(planName)}&email=${encodeURIComponent(customerEmail)}&name=${encodeURIComponent(customerName)}`,
            failUrl: window.location.origin + "/fail",
            customerEmail: customerEmail,
            customerName: customerName,
          });
        });
      }
    </script>
  </body>
</html>